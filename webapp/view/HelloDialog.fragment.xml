<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="sap.ui.demo.walkthrough.controller.HelloPanel">
    <Dialog 
        id="helloDialog"
        title="Hello {/recipient/name}"
    >
    <content>
        <core:Icon src="sap-icon://hello-worls" size="8rem" class="sapUiMediumMargin"></core:Icon>
    </content>
        <beginButton>
            <Button 
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"
             />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>